{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug linux",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/testing",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Debug win32",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/testing.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/",
            "environment": [],
            "console": "integratedTerminal",
            "logging": {
                "moduleLoad": true,
                "trace": true
            }
        }
    ]
}
