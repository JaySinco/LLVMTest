{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug demo.exe",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/demo.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/",
            "environment": [],
            "console": "integratedTerminal",
            "logging": {
                "moduleLoad": true,
                "trace": true
            }
        },
        {
            "name": "Debug ANTLR4 grammar",
            "type": "antlr-debug",
            "request": "launch",
            "input": "sample/input.txt",
            "grammar": "grammar/TParser.g4",
            "startRule": "program",
            "printParseTree": true,
            "visualParseTree": true
        }
    ]
}
