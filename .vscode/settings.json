{
    "editor.formatOnSave": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "bin": true,
        "out": true,
        "deps/vcpkg/*": true,
        "deps/*/bin": true,
        "deps/*/include": true,
        "deps/*/lib": true,
        "deps/*/share": true,
        "deps/*/x64": true,
        "deps/*/etc": true,
        "deps/*/src/out": true,
        "deps/*/src/*[_-]*": true,
    },
    "files.watcherExclude": {
        "bin": true,
        "out": true,
        "deps": true,
    },
    "C_Cpp.default.cppStandard": "c++17",
    "C_Cpp.default.includePath": [
        "${workspaceFolder}/deps/vcpkg/installed/x64-windows/include",
        "${workspaceFolder}/deps/vcpkg/installed/x64-windows/include/antlr4-runtime",
        "${workspaceFolder}/deps/vcpkg/installed/x64-windows/include/python3",
        "${workspaceFolder}/deps/libtorch/include/",
        "${workspaceFolder}/deps/libtorch/include/torch/csrc/api/include/",
    ],
    "C_Cpp.default.defines": [
        "UNICODE",
        "SOURCE_DIR=\"\""
    ],
    "antlr4.generation": {
        "mode": "external",
        "language": "Cpp",
        "visitors": false,
        "listeners": false,
        "outputDir": ".antlr"
    },
    "antlr4.format": {
        "alignTrailingComments": false,
        "allowShortBlocksOnASingleLine": true,
        "breakBeforeBraces": false,
        "columnLimit": 110,
        "continuationIndentWidth": 4,
        "indentWidth": 4,
        "keepEmptyLinesAtTheStartOfBlocks": false,
        "maxEmptyLinesToKeep": 1,
        "reflowComments": true,
        "spaceBeforeAssignmentOperators": false,
        "tabWidth": 4,
        "useTab": false,
        "alignColons": "none",
        "singleLineOverrulesHangingColon": true,
        "allowShortRulesOnASingleLine": true,
        "alignSemicolons": "hanging",
        "breakBeforeParens": false,
        "ruleInternalsOnSingleLine": false,
        "minEmptyLines": 0,
        "groupedAlignments": true,
        "alignFirstTokens": true,
        "alignLexerCommands": true,
        "alignActions": false,
        "alignLabels": true,
        "alignTrailers": false
    },
}
