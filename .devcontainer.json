{
    "build": {
        "context": ".",
        "dockerfile": "Dockerfile",
    },
    "extensions": [
        "ms-vscode-remote.remote-containers",
        "ms-vscode.cpptools",
        "twxs.cmake",
    ],
    "containerEnv": {
        "DISPLAY": "${localEnv:DISPLAY}"
    },
    "runArgs": [
        "-v",
        "/tmp/.X11-unix/:/tmp/.X11-unix/",
        "-v",
        "/home/${localEnv:USER}/.ssh:/root/.ssh"
    ]
}
